{
	"name": "Python & Typescript",
	"image": "ghcr.io/prulloac/base:bookworm",

	// ðŸ‘‡ Features to add to the Dev Container. More info: https://containers.dev/implementors/features.
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {},
		"ghcr.io/prulloac/devcontainer-features/bun:1": {},
		"ghcr.io/devcontainers/features/node:1": {},
		"ghcr.io/devcontainers/features/python:1": {
			"version": "3.11"
		},
		"ghcr.io/devcontainers-contrib/features/poetry:2": {},
		"ghcr.io/devcontainers-extra/features/nx-npm:1": {},
		"ghcr.io/devcontainers-extra/features/protoc-asdf:1": {},
		"ghcr.io/dhoeric/features/hadolint:1": {}
	},

	// ðŸ‘‡ Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// ðŸ‘‡ Configure tool-specific properties.
	"customizations": {
		"vscode": {
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"esbenp.prettier-vscode",
				"nrwl.angular-console",
				"dbaeumer.vscode-eslint",
				"peterj.proto",
				"streetsidesoftware.code-spell-checker",
				"exiasr.hadolint"
			]
		}
	},

	"mounts": [
    	"type=bind,source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,readonly"
	]

	// ðŸ‘‡ Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
